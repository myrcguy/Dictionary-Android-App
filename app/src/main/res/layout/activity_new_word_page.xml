<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewWordPage">

    <Button
            android:text="CLEAR"
            android:layout_width="150dp"
            android:layout_height="35dp" android:id="@+id/ButtonClear"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp" android:layout_marginEnd="120dp" android:layout_marginRight="120dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="ADD"
            android:layout_width="150dp"
            android:layout_height="35dp" android:id="@+id/ButtonAdd"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="170dp" android:layout_marginEnd="120dp" android:layout_marginRight="120dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="183dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/FrequencyInput"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="125dp" android:layout_marginEnd="31dp" android:layout_marginRight="31dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="HOME PAGE"
            android:layout_width="150dp"
            android:layout_height="35dp" android:id="@+id/ButtonGoHome"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70dp" android:layout_marginEnd="120dp" android:layout_marginRight="120dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/WordView"
            android:textSize="20sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="71dp" android:layout_marginStart="71dp"/>
    <EditText
            android:layout_width="183dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/NewWordInput"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="62dp" android:layout_marginEnd="31dp" android:layout_marginRight="31dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="Frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/FrequencyText"
            android:textSize="20sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/WordView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="71dp" android:layout_marginStart="71dp"/>
    <TextView
            android:text="Meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/MeaningInputText"
            android:textSize="20sp" android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/FrequencyText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="71dp" android:layout_marginStart="71dp"/>
    <EditText
            android:layout_width="259dp"
            android:layout_height="67dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/MeaningInput"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/MeaningInputText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="67dp" android:layout_marginStart="67dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>